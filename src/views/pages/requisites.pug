extends ../layouts/master.pug

block pageName
  - var pageName = "requisites"

block header
  include ../partials/_header

block content
  .section
    .section__left(data-aos="")
      .requisites-info
        .cabinet
          +asideNav(menuAside, pageName)
          .cabinet-content
            .cabinet-content-inner
              +mainTitleH2('Реквизиты для юридического лица', 'Личный кабинет')
              .address-desc
                .address-desc__item(data-aos="fade-up", data-aos-delay="400")
                  .address-desc__item-left Название компании
                  .address-desc__item-right ООО «Техноавиа-Санкт-Петербург»
                .address-desc__item(data-aos="fade-up", data-aos-delay="450")
                  .address-desc__item-left ИНН
                  .address-desc__item-right 7826125214
                .address-desc__item(data-aos="fade-up", data-aos-delay="500")
                  .address-desc__item-left КПП
                  .address-desc__item-right 781101001
                .address-desc__item(data-aos="fade-up", data-aos-delay="550")
                  .address-desc__item-left БИК
                  .address-desc__item-right 044030653
                .address-desc__item(data-aos="fade-up", data-aos-delay="600")
                  .address-desc__item-left Корреспондентский счет
                  .address-desc__item-right № 30101810500000000653
                .address-desc__item(data-aos="fade-up", data-aos-delay="650")
                  .address-desc__item-left Расчетный счет
                  .address-desc__item-right № 40702810955230165464
                .address-desc__item(data-aos="fade-up", data-aos-delay="700")
                  .address-desc__item-left Юридический адрес
                  .address-desc__item-right 192029, г. Санкт-Петербург, ул. Бабушкина, д. 19, лит. А
                .address-desc__item(data-aos="fade-up")
                  .address-desc__item-left Почтовый адрес
                  .address-desc__item-right 192029, г. Санкт-Петербург, ул. Бабушкина, д. 19, лит. А
                .address-desc__item(data-aos="fade-up")
                  .address-desc__item-left Руководитель
                  .address-desc__item-right Якимчук Виктор Викторович
                .address-desc__item(data-aos="fade-up")
                  .address-desc__item-left Рук. действ. на основании
                  .address-desc__item-right Действует на основании Устава
                .address-desc__item(data-aos="fade-up")
                  .address-desc__item-left Должность руководителя
                  .address-desc__item-right Генеральный директор
              .row.animated.margbot20(data-aos="fade-up")
                .col.col__xl-3.col__lg-4.col__md-6.col__xs-8: a.longLink(href='#') Изменить реквизиты
                .col.col__xl-3.col__lg-4.col__md-6.col__xs-4.text--right.text__md--left: a.longLink(href='#') Сохранить
      include ../components/_signForm

block footer
  .section__footer
    include ../partials/_footer


