extends ../layouts/master.pug

block pageName
  - var pageName = "editPassword"

block header
  include ../partials/_header

block content
  .section
    .section__left(data-aos="")
      .editPassword-info
        .cabinet
          +asideNav(menuAside, pageName)
          .cabinet-content
            .cabinet-content-inner
              +mainTitleH2('Изменить пароль', 'Личный кабинет')
              div(data-aos="fade-up", data-aos-delay="700")
                form.editPassword-form.basicControl.margbot50#editPassword(method='POST')
                  .row
                    .col.col__lg-6.col__md-10.col__xs-12
                      .form__group: +fieldInput('password', 'password', '', 'Текущий пароль', true)
                      .form__group: +fieldInput('password', 'newpassword', '', 'Новый пароль', true)
                      .form__group: +fieldInput('password', 'repeatpassword', '', 'Подтвердить пароль', true)
                      .form__group: button.btn.btn--info.btn--full.testAction.franciscoItem(type='submit'): .franciscoHelper Сохранить изменения пароля
                form.editPassword-form.basicControl.margbot50#restorePassword(method='POST', style='display: none')
                  .row
                    .col.col__lg-6.col__md-10.col__xs-12
                      .form__group: +fieldInput('email', 'email', '', 'Введите email', true)
                      button.btn.btn--info.btn--full.testAction.franciscoItem(type='submit'): .franciscoHelper Восстановить пароль
                .margbot30.text--center.text__md--left
                  a.longLink#passwords--js(href='#') Восстановить пароль
                .infoNotice
                  h5 Мы выслали ссылку для восстановления пароля #[br] на ваш почтовый ящик
                  .row
                    .col.col__md-6.col__xs-12: a.btn.btn--info.btn--full.franciscoItem#restoreForms(href='#'): .franciscoHelper Понятно
      include ../components/_signForm

block footer
  .section__footer
    include ../partials/_footer


