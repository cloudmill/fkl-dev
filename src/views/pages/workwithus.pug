extends ../layouts/master.pug

block pageName
  - var pageName = "workwithus"

block header
  include ../partials/_header

block content
  .section
    .container
      +mainTitle('С нами работают', 'Контакты', true)
      +menuSub(menuAbout, pageName)
    .section__left(data-aos="")
      .workwithus-info
        h2.vertical-reveal-outer
          .vertical-reveal-inner(data-aos="") Наши клиенты и партнеры
        .blueLine(data-aos="fade-up", data-aos-delay="700")
          h5.vertical-reveal-outer
            .vertical-reveal-inner(data-aos="") Продукцию FKL выбирают крупнейшие производители #[br] сельскохозяйственной техники
        .about__slider(data-aos="fade-up", data-aos-delay="900")
          .pagingInfo
          .sliderAbout
            - for (let x = 1; x < 7; x++)
              .sliderAbout__item
                .sliderAbout__item-img.o-block__img.js-visible.e-visible--1
                  figure
                    img(src='assets/images/workwithus.jpg', alt='')
                .sliderAbout__item-desc
                  img(src='assets/images/clients/logo.png', alt='')
                  br
                  br
                  p.text__md В 2018 году для РОСТСЕЛЬМАШ было поставлено около 500 000 подшипников, что составляет более чем 10-кратное увеличение по сравнению с 2016 годов
                  p.text__md Номенклатура изделий за этот же период времени увеличена более чем втрое
          .arrowInfo
            .arrowInfo-item.prev: img(src='assets/images/slickPrev.svg', alt='')
            .arrowInfo-item.next: img(src='assets/images/slickNext.svg', alt='')
        h5(data-aos="fade-up") И еще более 100 благодарных клиентов
        include ../components/_logoList
        .showMore--js(data-aos="fade-up")
          a.about__card__bottom.franciscoItem(href='#')
            .franciscoHelper
              img(src='assets/images/icons/showMore.svg', alt='')
              p Показать еще
        .workwithus-partners
          h2(data-aos="fade-up") Наши партнеры
          h5(data-aos="fade-up") FKL закупает только качественные расходные материалы. Наши партнеры, это лидеры своих ниш. У нас отстроены процессы доставки, поэтому мы поставляем все в срок
          .logoList
            .logoList__item(data-aos="fade-up")
              .ratio.ratio1-1
                .ratio-inner
                  +img('clients/logo-19.png')
            .logoList__item(data-aos="fade-up")
              .ratio.ratio1-1
                .ratio-inner
                  +img('clients/logo-20.png')
            .logoList__item(data-aos="fade-up")
              .ratio.ratio1-1
                .ratio-inner
                  +img('clients/logo-21.png')
            .logoList__item(data-aos="fade-up")
              .ratio.ratio1-1
                .ratio-inner
                  +img('clients/logo-22.png')
            .logoList__item(data-aos="fade-up")
              .ratio.ratio1-1
                .ratio-inner
                  +img('clients/logo-23.png')
            .logoList__item(data-aos="fade-up")
              .ratio.ratio1-1
                .ratio-inner
                  +img('clients/logo-24.png')
            .logoList__item(data-aos="fade-up")
              .ratio.ratio1-1
                .ratio-inner
                  +img('clients/logo-25.png')
            .logoList__item(data-aos="fade-up")
              .ratio.ratio1-1
                .ratio-inner
                  +img('clients/logo-26.png')
            .logoList__item(data-aos="fade-up")
              .ratio.ratio1-1
                .ratio-inner
                  +img('clients/logo-27.png')
            .logoList__item(data-aos="fade-up")
              .ratio.ratio1-1
