              .team-info--item__position Директор
              .team-info--item__name Пешков Сергей
              .team-info--item__phone +7 (911) 911-11-11
              .team-info--item__email ps@rusfkl.ru
        .team-info--item(data-aos="fade-up", data-aos-delay="700")
