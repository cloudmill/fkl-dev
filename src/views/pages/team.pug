              .team-info--item__position Руководитель дилерской сети
              .team-info--item__name Гуськов Илья
              .team-info--item__phone +7 (911) 911-11-11
              .team-info--item__email gi@rusfkl.ru
        .team-info--item(data-aos="fade-up", data-aos-delay="800")
          .team-info--inner
            .team-info--img: img(src='assets/images/team/item-3.jpg', alt='')
