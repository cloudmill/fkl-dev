extends ../layouts/master.pug

block pageName
  - var pageName = "step"

block header
  include ../partials/_header

block content
  .section
    .section__left(data-aos="")
      .step-info
        .container
          +mainTitleH2('Оформление заказа', 'Оформление заказа')
        form.step-inner(method='POST')
          .row.row-null
            .col.col__md-7.col__xs-12.step-inner-content(data-aos="fade-right", data-aos-delay="600")
              div
                .step-inner__item
                  h4 Контактные данные
                  .tabs-list
                    div: span Физическое лицо
                    div.active: span Юридическое лицо
                  .row
                    .col.col__xs-12.form__group: +fieldInput('text', 'names', '', 'Ваше имя', true, true)
                    .col.col__lg-6.col__xs-12.form__group: +fieldInput('text', 'phone', '', 'Телефон', true, true)
                    .col.col__lg-6.col__xs-12.form__group: +fieldInput('email', 'emails', '', 'Электронная почта', true, true)
                div
                  .step-inner__item(data-aos="fade-up")
                    h4 Куда доставить
                    .row
                      .col.col__lg-6.col__xs-12.form__group
                        select.select
                          option(value='', disabled, selected) Выберите город
                          option(value='central', data-tip='Центральный федеральный округ') Москва
                          option(value='northwest', data-tip='Северо-Западный федеральный округ') Санкт-Петербург
                          option(value='south', data-tip='Южный федеральный округ') Краснодар
                      .col.col__lg-6.col__xs-12.form__group: +fieldInput('text', 'index', '', 'Индекс', true)
                      .col.col__xs-12.form__group: +fieldInput('text', 'address', '', 'Адрес', true)
                  .step-inner__item(data-aos="fade-up")
                    h4 Способ доставки
                    .radio.error
                      input(type='radio', id='delivery14', name='delivery', required)
                      label.label(for='delivery14')
                        | Курьером
                      .radio-inner
                        span.text__lg 2 540 р.
                        span.text__sm.text--grey ~ через 6 дней (17.04)
                    .radio
                      input(type='radio', id='delivery24', name='delivery')
                      label.label(for='delivery24')
                        | Самовывоз из пункта выдачи CDEK (по предоплате)
                      .radio-inner
                        span.text__lg 2 540 р.
                        span.text__sm.text--grey ~ через 6 дней (17.04)
                        .margtop10: a.popup-modal.popup-with-zoom-anim(href='#cdek') Изменить пункт выдачи
                    .radio
                      input(type='radio', id='delivery34', name='delivery')
                      label.label(for='delivery34')
                        | Курьером CDEK (по предоплате)
                      .radio-inner
                        span.text__lg 2 911 р.
                        span.text__sm.text--grey ~ через 10 - 15 дней (21.04 - 26.04)
                    .radio
                      input(type='radio', id='delivery44', name='delivery')
                      label.label(for='delivery44')
                        | Курьером CDEK (по предоплате)
                      .radio-inner
                        span.text__lg 2 695 р.
                        span.text__sm.text--grey ~ через 6 дней (17.04)
                  .step-inner__item(data-aos="fade-up")
                    h4 Способ оплаты
                    .radio
                      input(type='radio', id='payment54', name='payment', checked)
                      label.label(for='payment54') Банковский счет (для юридических лиц)
                    .form__group: +fieldInput('text', 'company', '', 'Название компании', true)
                    .form__group: +fieldInput('text', 'inn', '', 'ИНН', true)
                    .form__group: +fieldInput('text', 'kpp', '', 'КПП', true)
                    .form__group: +fieldInput('text', 'bic', '', 'БИК', true)
                    .form__group: +fieldInput('text', 'korrBill', '', 'Корреспондентский счет', true)
                    .form__group: +fieldInput('text', 'bill', '', 'Расчетный счет', true)
                    .form__group: +fieldInput('text', 'legalBill', '', 'Юридический адрес', true)
                    .form__group: +fieldInput('text', 'postAdr', '', 'Почтовый адрес', true)
                    .form__group: +fieldInput('text', 'director', '', 'Руководитель', true)
                    .form__group: +fieldInput('text', 'act', '', 'Рук. действ. на основании', true)
                    .form__group: +fieldInput('text', 'state', '', 'Должность руководителя', true)
                    .form__group: +fieldTextarea('message', '', 'Комментарий к заказу', '5', false)
            .col.col__md-5.col__xs-12.step-inner-content(data-aos="fade-left", data-aos-delay="700")
              .step-inner__item.sticky
                .step-title
                  h4 Ваш заказ
                  a.text__sm(href='#') Изменить заказ
                .step-goodSumm
                  .step-goodSumm__item
                    p.text__sm.text--grey Товары
                  .step-goodSumm__item.text--right
                    p.text__sm 3 товара
                    b.text__lg 100 566 р.
                .step-goodSumm
                  .step-goodSumm__item
                    p.text__sm.text--grey Доставка
                  .step-goodSumm__item.text--right
                    p.text__sm Самовывоз из пункта выдачи #[br] CDEK (по предоплате)
                    b.text__lg 700 р.
                .step-goodSumm
                  p.text__lg Итого
                  b.text__lg 24 098,67 р.
                button.btn.btn--info.btn--full.btn--icon.form__group.franciscoItem.order--js(type='submit')
                  .franciscoHelper
                    span Оформить заказ
                    +img('whiteRightAr.svg')
                .checkbox
                  input#agreement(type='checkbox', name='agreement')
                  label.label(for='agreement')
                    span Согласен на обработку персональных данных в соответствии с #[a(href='assets/files/conf.pdf', target='_blank') политикой конфиденциальности.]
      include ../components/_signForm

block footer
  .section__footer
    include ../partials/_footer
