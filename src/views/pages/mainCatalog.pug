extends ../layouts/master.pug

block pageName
  - var pageName = "mainCatalog"

block header
  include ../partials/_header

block content
  .section
    .section__left(data-aos="")
      +mainTitle('Каталог продукции', '', true)
      .mainCatalog-info
        .clients-links(data-aos="fade-up", data-aos-delay="700")
          a.about__card__bottom.franciscoItem(href='#')
            .franciscoHelper
              img(src='assets/images/download.svg', alt='')
              p Скачать каталог в .PDF&nbsp;
                span.text__sm.text--grey (3 мб)
          a.about__card__bottom.franciscoItem(href='#')
            .franciscoHelper
              img(src='assets/images/download.svg', alt='')
              p Скачать каталог в .XLSX&nbsp;
                span.text__sm.text--grey (3 мб)
        .row.row-null(data-aos="fade-up", data-aos-delay="800")
          .col.col__md-6.col__xs-12.mainCatalog-desc
            .text__lg Если вы не знаете, какой подшипник вам нужен, то оставьте заявку и наш менеджер вам поможем с подбором
          .col.col__md-6.col__xs-12
            a.btn.btn--info.btn--full.btn--icon.franciscoItem(href='#')
              .franciscoHelper
                span Нужна помощь в подборе
                +img('whiteRightAr.svg')
            a.about__card__bottom.franciscoItem(href='#')
              .franciscoHelper
                img(src='assets/images/search_blue.svg', alt='')
                p Поиск по параметрам
        .catalogMenu(data-aos="fade-up", data-aos-delay="900")
          .catalogMenu__item(data-aos="fade-up")
            .catalogMenu__item-title: a(href='#') Ступицы
            .catalogMenu__item-link: a(href='#') Для посвеной техники
            .catalogMenu__item-link: a(href='#') Для почвообрабатывающей техники
          .catalogMenu__item(data-aos="fade-up")
            .catalogMenu__item-title: a(href='#') Шариковые подшипники
            .catalogMenu__item-link: a(href='#') Спцепрограмма для сельхоз техники
            .catalogMenu__item-link: a(href='#') Самоустанавливающиеся
            .catalogMenu__item-link: a(href='#') Однорядные
            .catalogMenu__item-link: a(href='#') Двухрядные
            .catalogMenu__item-link: a(href='#') Двухрядные Радиально-упорные
          .catalogMenu__item(data-aos="fade-up")
            .catalogMenu__item-title: a(href='#') Подшипниковые узлы
            .catalogMenu__item-link: a(href='#') Высокопрочный чугунный корпус
            .catalogMenu__item-link: a(href='#') В сером чугунном корпусе
            .catalogMenu__item-link: a(href='#') Стальной корпус
            .catalogMenu__item-link: a(href='#') Для дисковых борон
          .catalogMenu__item(data-aos="fade-up")
            .catalogMenu__item-title: a(href='#') Корпуса для подшипников
            .catalogMenu__item-link: a(href='#') В чугунном корпусе
            .catalogMenu__item-link: a(href='#') Стальной корпус
          .catalogMenu__item(data-aos="fade-up")
            .catalogMenu__item-title: a(href='#') Карданные валы
            .catalogMenu__item-link: a(href='#') Для сельхозтехники
            .catalogMenu__item-link: a(href='#') Для промышленности
          .catalogMenu__item(data-aos="fade-up")
            .catalogMenu__item-title: a(href='#') Крестовины
          .catalogMenu__item(data-aos="fade-up")
            .catalogMenu__item-title: a(href='#') Закрепительные втулки
          .catalogMenu__item(data-aos="fade-up")
            .catalogMenu__item-title: a(href='#') Акссесуары
          .catalogMenu__item(data-aos="fade-up")
            .catalogMenu__item-title: a(href='#') Полезная литература
      +nextBlockShort('База знаний по подшипникам')
      include ../components/_signForm

block footer
  .section__footer
    include ../partials/_footer


