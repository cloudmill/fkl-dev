extends ../layouts/master.pug

block pageName
  - var pageName = "step"

block header
  include ../partials/_header
  include ../components/_popups

block content
  .section
    .section__left(data-aos="")
      .step-info
        .container
          +mainTitleH2('Оформление заказа', 'Оформление заказа')
        .step-inner
          .row.row-null
            .col.col__md-7.col__xs-12.step-inner-content(data-aos="fade-right", data-aos-delay="600")
              .step-inner__item
                h4 Контактные данные
                .tabs
                  .tabs-list
                    a.tab.active(href='#stage1'): span Физическое лицо
                    a.tab(href='#stage2'): span Юридическое лицо
                  #stage1.tabs-content.show
                    .row
                      .col.col__xs-12.form__group: +fieldInput('text', 'name', '', 'Ваше имя', true)
                      .col.col__lg-6.col__xs-12.form__group: +fieldInput('text', 'phone', '', 'Телефон', true)
                      .col.col__lg-6.col__xs-12.form__group: +fieldInput('email', 'email', '', 'Электронная почта', true)
                  #stage2.tabs-content
                    .row
                      .col.col__xs-12.form__group: +fieldInput('text', 'nameLegal', '', 'Ваше имя', true)
                      .col.col__lg-6.col__xs-12.form__group: +fieldInput('text', 'phoneLegal', '', 'Телефон', true)
                      .col.col__lg-6.col__xs-12.form__group: +fieldInput('email', 'emailLegal', '', 'Электронная почта', true)
              .step-inner__item(data-aos="fade-up")
                h4 Куда доставить
                .row
                  .col.col__lg-6.col__xs-12.form__group
                    select.select
                      option(value='', disabled, selected) Выберите город
                      option(value='central') Центральный федеральный округ
                      option(value='northwest') Северо-Западный федеральный округ
                      option(value='south') Южный федеральный округ
                  .col.col__lg-6.col__xs-12.form__group: +fieldInput('text', 'index', '', 'Индекс', true)
                  .col.col__xs-12.form__group: +fieldInput('text', 'address', '', 'Адрес', true)
              .step-inner__item(data-aos="fade-up")
                h4 Способ доставки
                .radio
                  input(type='radio', id='delivery1', name='delivery')
                  label.label(for='delivery1')
                    | Курьером
                  .radio-inner
                    span.text__lg 2 540 р.
                    span.text__sm.text--grey ~ через 6 дней (17.04)
                .radio
                  input(type='radio', id='delivery2', name='delivery')
                  label.label(for='delivery2')
                    | Самовывоз из пункта выдачи CDEK (по предоплате)
                  .radio-inner
                    span.text__lg 2 540 р.
                    span.text__sm.text--grey ~ через 6 дней (17.04)
                    .margtop10: a.popup-modal.popup-with-zoom-anim(href='#cdek') Изменить пункт выдачи
                .radio
                  input(type='radio', id='delivery3', name='delivery')
                  label.label(for='delivery3')
                    | Курьером CDEK (по предоплате)
                  .radio-inner
                    span.text__lg 2 911 р.
                    span.text__sm.text--grey ~ через 10 - 15 дней (21.04 - 26.04)
                .radio
                  input(type='radio', id='delivery4', name='delivery')
                  label.label(for='delivery4')
                    | Курьером CDEK (по предоплате)
                  .radio-inner
                    span.text__lg 2 695 р.
                    span.text__sm.text--grey ~ через 6 дней (17.04)
              .step-inner__item(data-aos="fade-up")
                h4 Способ оплаты
                .radio
                  input(type='radio', id='payment1', name='payment')
                  label.label(for='payment1') Через Сбербанк Онлайн
                .radio
                  input(type='radio', id='payment2', name='payment')
                  label.label(for='payment2') Банковской картой VISA, MasterCard, Maestro, МИР
                .radio
                  input(type='radio', id='payment3', name='payment')
                  label.label(for='payment3') QIWI кошелек
                .radio
                  input(type='radio', id='payment4', name='payment')
                  label.label(for='payment4') Яндекс. Деньги
                .radio
                  input(type='radio', id='payment5', name='payment')
                  label.label(for='payment5') Банковский счет (для юридических лиц)
                br
                .form__group: +fieldTextarea('message', '', 'Комментарий к заказу', '5', false)
            .col.col__md-5.col__xs-12.step-inner-content(data-aos="fade-left", data-aos-delay="700")
              .step-inner__item.sticky
                .step-title
                  h4 Ваш заказ
                  a.text__sm(href='#') Изменить заказ
                .step-goodSumm
                  .step-goodSumm__item
                    p.text__sm.text--grey Товары
                  .step-goodSumm__item.text--right
                    p.text__sm 3 товара
                    b.text__lg 100 566 р.
                .step-goodSumm
                  .step-goodSumm__item
                    p.text__sm.text--grey Доставка
                  .step-goodSumm__item.text--right
                    p.text__sm Самовывоз из пункта выдачи #[br] CDEK (по предоплате)
                    b.text__lg 700 р.
                .step-goodSumm
                  p.text__lg Итого
                  b.text__lg 24 098,67 р.
                a.btn.btn--info.btn--full.btn--icon.form__group.franciscoItem(href='#')
                  .franciscoHelper
                    span Оформить заказ
                    +img('whiteRightAr.svg')
                .checkbox
                  input#agreement(type='checkbox', name='agreement')
                  label.label(for='agreement')
                    span Согласен на обработку персональных данных в соответствии с #[a(href='#') политикой конфиденциальности.]
      include ../components/_signForm

block footer
  .section__footer
    include ../partials/_footer
