extends ../layouts/master.pug

block pageName
  - var pageName = "invoice"

block header
  include ../partials/_header

block content
  .section
    .section__left(data-aos="")
      .invoice-info
        .container
          +mainTitleH2('Ваш счет', 'Ваш счет')
        .invoice-inner--img(data-aos="fade-up", data-aos-delay="600")
          .row.row-null
            .col.col__md-7.col__xs-12(data-aos="fade-right", data-aos-delay="700")
              +img('invoice.jpg')
            .col.col__md-5.col__xs-12(data-aos="fade-left", data-aos-delay="700")
              a.about__card__bottom.franciscoItem(href='#')
                .franciscoHelper
                  img(src='assets/images/download.svg', alt='')
                  p Скачать счет в .PDF
      include ../components/_signForm

block footer
  .section__footer
    include ../partials/_footer


