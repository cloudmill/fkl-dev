extends ../layouts/master.pug

block pageName
  - var pageName = "editPassword"

block header
  include ../partials/_header

block content
  .section
    .container
      +mainTitleH2('Восстановить пароль', 'Личный кабинет')
    .editPassword-info
      .cabinet
        //-+asideNav(menuAside, pageName)
        .cabinet-content
          .cabinet-content-inner
            div(data-aos="fade-up" data-aos-delay="700")
              form.editPassword-form.basicControl.margbot50#restorePassword(method='POST')
                .row
                  .col.col__lg-6.col__md-10.col__xs-12
                    .form__group: +fieldInput('email', 'email', '', 'Электронная почта', true)
                    button.btn.btn--info.btn--full.testAction.franciscoItem(type='submit'): .franciscoHelper Восстановить пароль
              .infoNotice
                h5 Мы выслали ссылку для восстановления пароля #[br] на ваш почтовый ящик
                .row
                  .col.col__md-6.col__xs-12: a.btn.btn--info.btn--full.franciscoItem#restoreForms2(href='#'): .franciscoHelper Понятно
    .section__left(data-aos="").solo
      include ../components/_signForm

block footer
  .section__footer
    include ../partials/_footer


