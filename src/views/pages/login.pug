extends ../layouts/master.pug

block pageName
  - var pageName = "login"

block header
  include ../partials/_header

block content
  .section
    .section__left(data-aos="")
      .login-info
        .container
          +mainTitle('Личный кабинет', 'Личный кабинет')
        .tabs(data-aos="fade-up", data-aos-delay="700")
          .tabs-list
            a.tab.active(href='#stage1') Есть аккаунт
            a.tab(href='#stage2') Регистрация
          #stage1.tabs-content.show
            .regForm-error
            form.regForm(method='POST', action='')
              .row.row-null
                .col.col__md-6.col__xs-12: +fieldInput('email', 'email', '', 'Электронная почта', true)
                .col.col__md-6.col__xs-12: +fieldInput('password', 'password', '', 'Пароль', true)
              .forgot-pass
                a(href='#') Забыли пароль?
              a.btn.btn--info.btn--full.btn--icon.franciscoItem.submit--js(href='#')
                .franciscoHelper
                  span Войти
                  +img('whiteRightAr.svg')
          #stage2.tabs-content
            .registr-info
              .login-chk
                .checkbox
                  input#legal(type='checkbox', name='legal', checked)
                  label.label(for='legal') Я юридическое лицо или ИП
              form.regForm(method='POST', action='')
                .row.row-null#resident(style='display:none')
                  .col.col__xs-12: +fieldInput('text', 'name', '', 'Ваше имя', true)
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'phone', '', 'Номер телефона', true)
                  .col.col__md-6.col__xs-12: +fieldInput('email', 'email1', '', 'Электронная почта', true)
                  .col.col__md-6.col__xs-12: +fieldInput('password', 'password1', '', 'Пароль', true)
                  .col.col__md-6.col__xs-12: +fieldInput('password', 'repassword1', '', 'Повторите пароль', true)
                .row.row-null#professional
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'name2', '', 'Ваше имя', true)
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'company', '', 'Название компании', true)
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'phone2', '', 'Номер телефона', true)
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'inn', '', 'ИНН', true)
                  .col.col__md-6.col__xs-12: +fieldInput('email', 'email2', '', 'Электронная почта', true)
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'kpp', '', 'КПП', true)
                  .col.col__md-6.col__xs-12: +fieldInput('password', 'password2', '', 'Пароль', true)
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'bic', '', 'БИК', true)
                  .col.col__md-6.col__xs-12: +fieldInput('password', 'repassword2', '', 'Повторите пароль', true)
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'korrBill', '', 'Корреспондентский счет', true)
                  .col.col__md-6.col__xs-12
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'bill', '', 'Расчетный счет', true)
                  .col.col__md-6.col__xs-12
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'legalBill', '', 'Юридический адрес', true)
                  .col.col__md-6.col__xs-12
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'postAdr', '', 'Почтовый адрес', true)
                  .col.col__md-6.col__xs-12
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'director', '', 'Руководитель', true)
                  .col.col__md-6.col__xs-12
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'act', '', 'Действует на основании', true)
                  .col.col__md-6.col__xs-12
                  .col.col__md-6.col__xs-12: +fieldInput('text', 'state', '', 'Должность руководителя', true)
                a.btn.btn--info.btn--full.btn--icon.franciscoItem(href='#')
                  .franciscoHelper
                    span Зарегистрироваться
                    +img('whiteRightAr.svg')
                .regForm-chk
                  .checkbox
                    input#agreement(type='checkbox', name='agreement')
                    label.label(for='agreement')
                      span Нажимая на кнопку «Зарегистрироваться», вы соглашаетесь на обработку персональных данных в соответствии с #[a(href='#') политикой конфиденциальности.]
      include ../components/_signForm

block footer
  .section__footer
    include ../partials/_footer


