    .wrapper

      //- Header
      include ../partials/_loader
      include ../partials/_searchBar
      include ../components/_popups
      block header

      //- block content
      main(class='page ' + pageName)
        block content

        //- Footer
        block footer

    //- block scripts
    block scripts
      script(src='https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js')
      script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAoOHU9S0Ohhctt2VS6Qu3JrmaIjqFQNYk")
