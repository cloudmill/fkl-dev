aside.aside(data-aos="fade-right", data-aos-delay="500")
  form.filter(name='myForm', action='', method='POST')
    .filter-title.filter-clicker.active.franciscoItem.hidden__lg.hidden__xl
      .franciscoHelper
        +img('icons/filter.svg')
        span Скрыть фильтры
        +img('icons/minus.svg')
    .filter-list.active
      .filter-list-header.filter-clicker.active Тип корпуса S (USP)
      .filter-list-body.active
        .filter-list__item.filter-list__item--chk
          .checkbox
            input(type="checkbox", id='type1')
            label.label(for='type1') C
          .checkbox
            input(type="checkbox", id='type2')
            label.label(for='type2') D
          .checkbox
            input(type="checkbox", id='type3')
            label.label(for='type3') F
          .checkbox
            input(type="checkbox", id='type4')
            label.label(for='type4') G
          .checkbox
            input(type="checkbox", id='type5')
            label.label(for='type5') H
          .checkbox
            input(type="checkbox", id='type6')
            label.label(for='type6') P
          .checkbox
            input(type="checkbox", id='type7')
            label.label(for='type7') S
          .checkbox
            input(type="checkbox", id='type8')
            label.label(for='type8') U
          .checkbox
            input(type="checkbox", id='type9')
            label.label(for='type9') V
      .filter-list-body.active
        .filter-list__item
          label Определите цену
          #range(data-min=100, data-max=100000, data-now-min=100, data-now-max=50000)
          .input-group
            input.control.control--border#skip-value-lower(type='text')
            span —
            input.control.control--border#skip-value-upper(type='text')
            span р.
        .filter-list__item
          label Выберите диапазон (мм)
          .input-group
            input.control.control--border(type='number')
            span ≤d≤
            input.control.control--border(type='number')
        .filter-list__item
          label Расстояние между отверстиями (мм)
          .input-group
            input.control.control--border(type='number')
            span ≤S≤
            input.control.control--border(type='number')
        .filter-list__item
          label Наружный диаметр (мм)
          .input-group
            input.control.control--border(type='number')
            span ≤D≤
            input.control.control--border(type='number')
      a.btn.btn--info.btn--full.btn--icon.franciscoItem(href='#')
        .franciscoHelper
          span Подобрать
          +img('whiteRightAr.svg')
      a.btn.btn--default.btn--full.franciscoItem.reset--js(href='#')
        .franciscoHelper Сбросить
